    }
    .player {
        display: flex;
        align-items: center;
        gap: 10px;
    }
    .title {
        font-size: 18px;
        font-weight: bold;
        color: #000;
    }
    button {
        background-color: #8B3A3A; /* tono vino suave */
        border: none;
        border-radius: 50%;
        width: 40px;
        height: 40px;
        color: white;
        font-size: 18px;
        cursor: pointer;
    }
    button:hover {
        background-color: #A05252;
